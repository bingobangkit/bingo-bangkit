<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.ContentFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView2"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_user" />

    <TextView
        android:layout_marginStart="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Go-Bin"
        android:textColor="@color/navy"
        android:textSize="18sp"
        android:includeFontPadding="false"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="@+id/materialCardView2"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
                app:layout_constraintTop_toBottomOf="@+id/rv_content">


                <RadioButton
                    android:id="@+id/radio_green"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/green"
                    android:button="@null"
                    android:buttonTint="@color/white"
                    android:drawableStart="@drawable/ic_pete"
                    android:gravity="center"
                    android:outlineProvider="paddedBounds"
                    android:paddingStart="17dp"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radio_blue"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/green"
                    android:button="@null"
                    android:buttonTint="@color/white"
                    android:drawableStart="@drawable/ic_hdpe"
                    android:gravity="center"
                    android:paddingStart="17dp"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radio_yellow"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/yellow"
                    android:button="@null"
                    android:buttonTint="@color/white"
                    android:drawableStart="@drawable/ic_pvc"
                    android:gravity="center"
                    android:paddingStart="17dp"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radio_red"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/red"
                    android:button="@null"
                    android:buttonTint="@color/white"
                    android:drawableStart="@drawable/ic_ldpe"
                    android:gravity="center"
                    android:paddingStart="17dp"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radio_pp"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/yellow"
                    android:button="@null"
                    android:buttonTint="@color/white"
                    android:drawableStart="@drawable/ic_pp"
                    android:gravity="center"
                    android:paddingStart="17dp"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radio_ps"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/red"
                    android:button="@null"
                    android:buttonTint="@color/white"
                    android:drawableStart="@drawable/ic_ps"
                    android:gravity="center"
                    android:paddingStart="17dp"
                    tools:ignore="RtlSymmetry" />

                <RadioButton
                    android:id="@+id/radio_other"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/red"
                    android:button="@null"
                    android:buttonTint="@color/white"
                    android:drawableStart="@drawable/ic_other"
                    android:gravity="center"
                    android:paddingStart="17dp"
                    tools:ignore="RtlSymmetry" />


            </RadioGroup>

        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/recycle_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/recycler"
        android:translationZ="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialCardView2"
        app:layout_constraintStart_toStartOf="@+id/materialCardView2"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:translationZ="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/materialCardView2"
        app:layout_constraintEnd_toEndOf="@+id/materialCardView2"
        app:layout_constraintStart_toEndOf="@+id/recycle_logo"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <TextView
            android:id="@+id/recycle_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:fontFamily="@font/poppins_bold"
            android:gravity="start"
            android:includeFontPadding="false"
            android:text="Hallo"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:translationZ="100dp" />

        <TextView
            android:id="@+id/recycle_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:includeFontPadding="false"
            android:text="Hallo"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:translationZ="100dp" />
    </LinearLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="20dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="Common Uses"
        android:textColor="@color/navy"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/materialCardView2"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView2" />


    <androidx.recyclerview.widget.RecyclerView
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:id="@+id/rv_content"
        app:spanCount="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:listitem="@layout/grid_common_uses" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</androidx.constraintlayout.widget.ConstraintLayout>