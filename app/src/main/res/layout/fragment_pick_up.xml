<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    tools:context=".ui.pickup.PickUpFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_card_date"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginHorizontal="18dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp"
        app:layout_constraintEnd_toEndOf="@+id/materialButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/materialButton"
        app:layout_constraintTop_toBottomOf="@+id/upcoming_title">

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/title_nav_pickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="Schedule a Pickup"
        android:textColor="@color/navy"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_back" />

    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Pick a Date"
        android:textColor="@color/navy"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_nav_pickup" />

    <androidx.cardview.widget.CardView
        android:id="@+id/materialButton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:backgroundTint="@color/white"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        app:elevation="6dp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_calendar_btn" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Wednesday, 19 May 2021"
        android:textColor="@color/navy"
        app:layout_constraintBottom_toBottomOf="@+id/materialButton"
        app:layout_constraintEnd_toEndOf="@+id/materialButton"
        app:layout_constraintStart_toStartOf="@+id/materialButton"
        app:layout_constraintTop_toTopOf="@+id/materialButton" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Garbage Categoty"
        android:textColor="@color/navy"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/materialButton" />


    <TextView
        android:id="@+id/upcoming_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Address"
        android:textColor="@color/navy"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Payment Method"
        android:textColor="@color/navy"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/btn_card_date" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Order Info"
        android:textColor="@color/navy"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

    <TextView
        android:id="@+id/txt_btn_edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins_light"
        android:text="Edit Address"
        android:layout_marginEnd="24dp"
        android:textColor="@color/blue"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_card_date"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="18dp"
        android:elevation="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="7dp"
        app:layout_constraintEnd_toEndOf="@+id/materialButton"
        app:layout_constraintStart_toStartOf="@+id/materialButton"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:elevation="12dp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="Mixed Trash"
        android:textColor="@color/navy"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:fontFamily="@font/poppins_light"
        android:includeFontPadding="false"
        android:text="(2000/kg)"
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        android:fontFamily="@font/poppins_light"
        android:includeFontPadding="false"
        android:text="(2000/kg)"
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_type_trash"
        app:layout_constraintStart_toEndOf="@+id/txt_type_trash"
        app:layout_constraintTop_toTopOf="@+id/txt_type_trash" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="20dp"
        android:layout_height="21dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:elevation="12dp"
        android:src="@drawable/ic_trash"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/cardView" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:elevation="12dp"
        android:src="@drawable/ic_bottle"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/txt_type_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:elevation="12dp"
        android:fontFamily="@font/poppins_medium"
        android:includeFontPadding="false"
        android:text="Plastic Botlle"
        android:textColor="@color/navy"
        app:layout_constraintBottom_toBottomOf="@+id/imageView6"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="@+id/imageView6" />

    <ImageView
        android:layout_marginStart="24dp"
        android:id="@+id/btn_min_mixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:src="@drawable/ic_btn_min"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView9" />

    <ImageView
        android:id="@+id/btn_min_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:src="@drawable/ic_btn_min"
        app:layout_constraintBottom_toBottomOf="@+id/txt_type_trash"
        app:layout_constraintStart_toEndOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="@+id/btn_min_mixed" />

    <ImageView
        android:id="@+id/btn_plus_mixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:elevation="14dp"
        android:src="@drawable/ic_btn_plus"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/btn_min_mixed" />

    <ImageView
        android:id="@+id/btn_plus_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:elevation="14dp"
        android:src="@drawable/ic_btn_plus"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintTop_toTopOf="@+id/btn_min_type" />

    <TextView
        android:id="@+id/txt_kg_mixed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:includeFontPadding="false"
        android:text="1kg"
        android:textColor="@color/navy"
        app:layout_constraintBottom_toBottomOf="@+id/btn_min_mixed"
        app:layout_constraintEnd_toStartOf="@+id/btn_plus_mixed"
        app:layout_constraintStart_toEndOf="@+id/btn_min_mixed" />

    <TextView
        android:id="@+id/txt_kg_recyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:includeFontPadding="false"
        android:text="1kg"
        android:textColor="@color/navy"
        app:layout_constraintBottom_toBottomOf="@+id/btn_min_type"
        app:layout_constraintEnd_toStartOf="@+id/btn_plus_mixed"
        app:layout_constraintStart_toEndOf="@+id/btn_min_mixed" />

    <ImageView
        android:layout_marginTop="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintStart_toStartOf="@+id/upcoming_title"
        app:layout_constraintTop_toTopOf="@+id/btn_card_date" />

    <TextView
        android:id="@+id/txt_address"
        android:layout_width="250dp"
        android:layout_height="41dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:elevation="14dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Jl. Rancajigang no 128 RT 03 RW 10 Desa Padamulya Kec Majalaya Kab. Bandung"
        android:textColor="@color/navy"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/upcoming_title" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="18dp"
        android:backgroundTint="@color/white"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        app:elevation="6dp"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="@+id/materialButton"
        app:layout_constraintStart_toStartOf="@+id/materialButton"
        app:layout_constraintTop_toBottomOf="@+id/textView14">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_payment" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:elevation="14dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Wallet"
        android:textColor="@color/navy"
        app:layout_constraintBottom_toBottomOf="@+id/cardView3"
        app:layout_constraintStart_toStartOf="@+id/cardView3"
        app:layout_constraintTop_toTopOf="@+id/cardView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:elevation="14dp"
        android:fontFamily="@font/poppins_light"
        android:includeFontPadding="false"
        android:text="(Rp.20.000)"
        android:textColor="@color/navy"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView16"
        app:layout_constraintStart_toEndOf="@+id/textView16"
        app:layout_constraintTop_toTopOf="@+id/textView16" />

    <TextView
        android:id="@+id/textViewy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Mixed Trash"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textViewx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Recycle Trash"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textViewy" />

    <TextView
        android:id="@+id/textViewxx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:textColor="@color/navy"
        android:fontFamily="@font/poppins_medium"
        android:text="Total"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textViewx" />

    <TextView
        android:id="@+id/txt_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:elevation="14dp"
        android:fontFamily="@font/poppins_medium"
        android:text="2000"
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewxx"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_recycle_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:elevation="14dp"
        android:fontFamily="@font/poppins_regular"
        android:text="4000"
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewx"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_mixed_trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="18dp"
        android:elevation="14dp"
        android:fontFamily="@font/poppins_regular"
        android:text="2000"
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewy"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="-Rp."
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_mixed_trash"
        app:layout_constraintTop_toTopOf="@+id/txt_mixed_trash" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="+Rp."
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_mixed_trash"
        app:layout_constraintTop_toTopOf="@+id/txt_recycle_trash" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_regular"
        android:text="+Rp."
        android:visibility="gone"
        tools:visibility="visible"
        android:textColor="@color/navy"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/txt_mixed_trash"
        app:layout_constraintTop_toTopOf="@+id/txt_total" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_schedule_pickup"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="21dp"
        android:layout_marginHorizontal="18dp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Schedule Pickup"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:icon="@drawable/ic_schedule_icon"
        app:layout_constraintTop_toBottomOf="@+id/textViewxx" />

</androidx.constraintlayout.widget.ConstraintLayout>