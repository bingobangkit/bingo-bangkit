<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_nav"
    app:startDestination="@id/contentFragment">

    <fragment
        android:id="@+id/contentFragment"
        android:name="com.bingo.gobin.ui.home.ContentFragment"
        android:label="fragment_content"
        tools:layout="@layout/fragment_content" >
        <action
            android:id="@+id/action_contentFragment_to_captureFragment"
            app:destination="@id/captureFragment" />
    </fragment>
    <fragment
        android:id="@+id/captureFragment"
        android:name="com.bingo.gobin.ui.camera.CaptureFragment"
        android:label="fragment_capture"
        tools:layout="@layout/fragment_capture" />
    <activity
        android:id="@+id/authActivity"
        android:name="com.bingo.gobin.ui.auth.AuthActivity"
        android:label="activity_auth"
        tools:layout="@layout/activity_auth" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.bingo.gobin.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>